{
    "manifest_version": 3,
    "name": "Visly",
    "version": "1.0",
    "description": "Select text and get a floating button to log it.",
    "action": {
    "default_popup": "index.html",
    "default_icon": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
}
  },
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
